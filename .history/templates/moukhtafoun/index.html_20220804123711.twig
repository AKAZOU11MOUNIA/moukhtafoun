{% extends 'base.html.twig' %}
{% block head %}
{{ parent() }}
    
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
       
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.3.5/dist/alpine.min.js" defer></script>
    

{% endblock %}
{% block containte %}
{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                {{ wls|length }} Personnes Disparues
            </h1>

            <span class="font-light text-gray-500 italic">
                    liste des personnes disparues
            </span>
        </div>
    </div>
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        
        {% for wl in wls %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ asset('images/' ~ wl.getImage()) }}" 
                    width="200" 
                    height="150"
                    alt=""
                    class="mx-auto d-block shadow-xl rounded-md"
                />

                <h2 class="text-center text-gray-700 font-bold text-3xl py-2">
                    {{ wl.getNomComplet() }}
                </h2>

                <span class="text-center text-gray-500">
                <span class="text-center italic text-sm text-gray-800"> {{ wl.getPeriodeDeDisparition().format('%y année %m mois %d jour') }}
                </span>
                <p class="text-center text-base text-gray-600 pt-4 pb-10 leading-8 font-light">
                    {{ wl.getVilleEtLieuDeDisparition() }}
                </p>

                <a href="{{ path('details', {'id': wl.id }) }}" class="text-center uppercase btn btn-outline-success my-2 my-sm-0">
                     plus de détails
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% endblock %}