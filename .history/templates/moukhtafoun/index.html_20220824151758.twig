{% extends 'base.html.twig' %}
{% block head %}
{{ parent() }}
    
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
       
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.3.5/dist/alpine.min.js" defer></script>
        
        
{% endblock %}
{% block containte %}
{% block body %}
    <div class="w-4/5 m-auto text-center ">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                {{ pr|length }} Personnes Disparues
            </h1>

            <span class="font-light italic text-lime-600">
                    “Our vision is for every missing child and adult, and every loved one left behind, to find help, hope and a safe way to reconnect.”
            </span>
        </div>
    </div>
    <div class="js-filter">
    <div class="c">
    <section id="section-2" class="section appeals_list"> 
    <div class="appeals-filter-container"> 
    <div class="appeals-filter"> 
    <div class="appeals-filter__header"> 
    <h2 class="h4">
                        Search and filter this page
                        </h2>
                         </div> 
                         <div class="appeals-filter__row">
     <form class="form-inline js-filter-form " role="form" id="filter_form">
     
                        <div class="col-md-3">
                        {{ form_start(form)}}
                          <div class="form-group">
                       
                                <div style="width:100%;">
                          {{ form_row(form.age, {'attr': {'class': 'field__control field__control--search form-control','style':'width:100%;'}}) }}  
                          </div>
                          </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <div style="width:100%;">
                          {{ form_row(form.ville, {'attr': {'class': 'form-control','style':'width:100%;'}}) }}  
                          </div>
                            </div>
                        </div>

                         <div class="col-md-3">
                            <div class="form-group">
                                <div style="width:100%;">
                          {{ form_row(form.nom, {'attr': {'class': 'form-control','style':'width:100%;'}}) }}  
                          </div>
                            </div>
                        </div>


                        <div class="col-md-3">
                            <div class="form-group">
                               <div style="width:100%;">
                          {{ form_row(form.submit, {'attr': {'class': 'btn btn-outline-success button','style':'width:100%;'}}) }}  
                          </div>
                            </div>
                        </div>                  
                        {{ form_end(form)}}
                
                </form>
                </div>
                </div>
                </div>
                </div>
                </section>
                <style>
				
				
                .button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}

			</style>
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 js-filter-content">
        
       {% include 'moukhtafoun/_pr.html.twig' %}
        </div>
        <div class="js-filter-pagination">
         {% include 'moukhtafoun/pagination.html.twig' %}
    </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"/>
    <script type="module" src="{{ asset('assets/JS/js/app.js') }}" defer></script>
<script type="module" src="{{ asset('JS/js/app.js') }}" defer></script>

{% endblock %}

{% endblock %}